      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Padarex">
            <items>
              <MenuItem onAction="#onActionSairDeSessao" mnemonicParsing="false" text="Sair de sessÃ£o" />
